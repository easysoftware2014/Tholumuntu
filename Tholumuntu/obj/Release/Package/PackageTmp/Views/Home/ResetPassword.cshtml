
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="modal fade" id="resetPasswordModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="text-align: center;margin-left: 100px">Password reset</h4>
            </div>
            <div class="modal-body">
                <form id="loginForm">
                    <div class="form-group">
                        <input type="password" class="form-control" id="txtPassword" placeholder="Password" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="txtConfirmPassword" placeholder="Confirm Password" required="required" />
                    </div>                    
                </form>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn badge-light btn-outline-success" id="btnResetPassword" title="Login" value="Reset" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<script src="../../Scripts/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#resetPasswordModal").modal('show');

        $("#btnResetPassword").click(function () {
            var password = $("#txtPassword").val();
            var confirmPasssword = $("#txtConfirmPassword").val();

            if (password != confirmPasssword)
                alert('Password does not match, please try again')
            else {
                var uploadData = { "password": password };
                $.ajax({
                    type: "POST",
                    url: "resetpassword",
                    data: JSON.stringify(uploadData),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    cache: false,
                    success: function (data) {
                        event.preventDefault();
                        if (data) {
                            alert("Password successfully reset.")
                            location.href = "/profile";

                        }
                        else
                            alert("Something wrong happened, please try again");
                    },
                    error: function (error) {
                        alert("Error:" , error);
                        
                    }
                })
            }

        });
    })
   
</script>