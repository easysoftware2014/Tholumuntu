@model Tholumuntu.Models.UserProfileModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";

}
<script src="../../Scripts/jquery.min.js"></script>
<style type="text/css">
    .table-padding-left {
        margin-left: 20px;
        margin-top: -5px;
    }
</style>

<div class="row">
    <div class="col-sm-12">
        <br />
    </div>
</div>

<div class="row profile">
    <div class="col-md-3">
        <div class="profile-sidebar">
            <!-- SIDEBAR USERPIC -->
            <div class="profile-userpic">
                <img src="~/Images/time-04.jpg" class="img-responsive" alt="Profile Picture" />
            </div>
            <!-- END SIDEBAR USERPIC -->
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
                <div class="profile-usertitle-name">
                    @Model.User.Name @Model.User.Surname
                </div>
                @*<div class="profile-usertitle-job">
                        Job Title

                    </div>*@
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR BUTTONS -->
            <div class="profile-userbuttons">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <input type="file" class="fa-file btn-sm" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-2">
                        <input type="button" class="btn btn-default btn-sm" disabled="disabled" width="100" value="Change" />

                    </div>
                </div>

            </div>
            <!-- END SIDEBAR BUTTONS -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
                <ul class="nav">
                    <li class="active">
                        <a href="#">
                            <i class="glyphicon glyphicon-home"></i>
                            Overview
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="glyphicon glyphicon-user"></i>
                            Account Settings
                        </a>
                    <li>
                        <a href="#">
                            <i class="glyphicon glyphicon-log-out"></i>
                            Log Out
                        </a>
                    </li>
                </ul>
            </div>
            <!-- END MENU -->
        </div>
    </div>

    <div class="col-md-9">
        <div class="profile-content">
            <div class="container">
                <div class="row my-2">
                    <div class="col-lg-8 order-lg-2">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a href="" data-target="#edit" data-toggle="tab" class="nav-link active">Edit</a>
                            </li>
                            <li class="nav-item">
                                <a href="" data-target="#profile" data-toggle="tab" class="nav-link">Personal Traits</a>
                            </li>
                            <li class="nav-item">
                                <a href="" data-target="#messages" data-toggle="tab" class="nav-link">Love language</a>
                            </li>
                        </ul>
                        <div class="tab-content py-4">
                            <div class="tab-pane active" id="edit">
                                <form role="form">
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">First name</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" value="@Model.User.Name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Last name</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" value="@Model.User.Surname">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Email</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="email" value="@Model.User.Email">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Contact number</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" value="@Model.User.ContactNumber">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Gender</label>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label>Female</label><br />
                                                <input class="radio-inline" type="radio" name="gender" value="Female">

                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Male</label><br />
                                            <input class="radio-inline" type="radio" name="gender" value="Male">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Address</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" value="" placeholder="Street">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label"></label>
                                        <div class="col-lg-3">
                                            <input class="form-control" type="text" value="" placeholder="City">
                                        </div>
                                        <div class="col-lg-3">
                                            <input class="form-control" type="text" value="" placeholder="State">
                                        </div>
                                        <div class="col-lg-3">
                                            <input class="form-control" type="text" value="" placeholder="Postal Code">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label"></label>
                                        <div class="col-lg-9">
                                            <input type="reset" class="btn btn-secondary" value="Cancel">
                                            <input type="button" id="update-profile" class="btn btn-primary" value="Save Changes">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane" id="profile">
                                <h2 style="font-family: courier,arial,helvetica;">Profile set-up</h2>
                                <br />
                                <br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <table class="table table-borderless table-hover">
                                            <tr>
                                                <th>Trait</th>
                                                <th>Yes / No</th>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I love adventure</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="adventure" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="adventure" title="No">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I am imaginative</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="imaginative" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="imaginative" title="No">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I am the first to try new things</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="new_things" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="new_things" title="No">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I am highly self-disciplined</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="disciplined" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="disciplined" title="No">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I am very organized and always come prepared</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="organized" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="organized" title="No">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I like to know the plan rather than be spontaneous</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="spontaneous" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="spontaneous" title="No">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I am the life of the party.</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="party" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="party" title="No">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I don’t mind being the center of attention.</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="attention" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="attention" title="No">

                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <h4>I am usually the one to start a conversation with someone.</h4>
                                                </td>
                                                <td>
                                                    <input type="radio" class="radio-inline" value="Yes" style="margin-top: 12px;" name="conversation" title="Yes">
                                                    <input type="radio" class="radio-inline" value="No" style="margin-top: 12px;" name="conversation" title="No">

                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    
                                </div>
                                <!--/row-->
                            </div>
                            <div class="tab-pane" id="messages">
                                
                            </div>
                        </div>
                    </div>
                    @*<div class="col-lg-4 order-lg-1 text-center">
                            <img src="//placehold.it/150" class="mx-auto img-fluid img-circle d-block" alt="avatar">
                            <h6 class="mt-2">Upload a different photo</h6>
                            <label class="custom-file">
                                <input type="file" id="file" class="custom-file-input">
                                <span class="custom-file-control">Choose file</span>
                            </label>
                        </div>*@
                </div>
            </div>

        </div>
    </div>
</div>


